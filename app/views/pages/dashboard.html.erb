<div class="row">
  <div class="col-12">
    <div class="card card-welcome-dashboard">
      <div class="row">
        <div class="col-6">
          <h1 class="mb-3" style="font-size: 2rem">Ready to save the world, SuperZero?</h1>
          <div class="row">
            <div class="col-4">
              <%= image_tag("superman.svg", :style => 'max-height: 10rem') %>
            </div>
            <div class="col-8">
            <h2 style="font-size: 1.6rem">Level: 1</h2>
              <div class="progress">
                <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%">
                75%
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div>
  <% @weekly_challenges.each do |challenge| %>
    <p> <%= @user.username %> </p>
    <p> <%= challenge.challenge.name  %> </p>
    <p> <%= challenge.challenge.description %> </p>
    <%= link_to "Challenge done", update_challenge_path(challenge), method: 'patch' %>
  <% end %>
</div>


<p>
  <%= @user.username %>
  <%= @user.email %>
  <%= @user.level %>
  <%= @user.xp %>
  <%= @user.gender %>
  <%= @user.address %>
  <%= @user.tree_count %>
</p>
