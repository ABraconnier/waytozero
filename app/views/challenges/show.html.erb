<div class="col-12">
  <div class="d-flex">
    <div class="card card-challenge-show col-7">
        <h1><%= @challenge.name %></h1>
        <h3>Save up to <%= @challenge.plastic %> kg of plastic !!!</h3>
        <%= cl_image_tag @challenge.photo %>
        <br>
        <p><%= @challenge.description.html_safe %></p>
    </div>
    <div class="card card-challenge-show-map col-4">
        <% if @challenge.video_link %>
          <h3>The video to do it yourself</h3>
          <%= @challenge.video_link.html_safe %>
        <% else %>
          <%= "There is no video yet for this challenge" %>
        <% end %>
        <br>
        <% unless @markers.nil? %>
          <h3>Our partner shops that will help you for the challenge</h3>
          <div
            id="map"
            style="width: 100%;
            height: 300px;"
            data-markers="<%= @markers.to_json %>"
            data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
          ></div>
        <% end %>
        <br>
        <p><%= link_to "Add to my weekly challenges", weekly_challenges_path(@challenge), method: :post, class: "btn button-show" %></p>
        <p><%= link_to "Mark as already done", weekly_challenges_path(@small_challenge, done: "true"), method: :post,  class: "btn button-show"%></p>
        <p><%= link_to "Back to dashboard", dashboard_path %></p>
    </div>
  </div>
</div>
