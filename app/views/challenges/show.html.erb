<div class="col-12">
  <%= link_to "Go to all challenges categories", categories_path %>
  <div class="col-6">
    <div class="card card-challenge-show">
      <img src=<%="https://source.unsplash.com/200x400/?#{@challenge.name}"%> alt="">
        <h1><%= @challenge.name %></h1>
        <p><%= @challenge.description.html_safe %></p>
        <p>Save up to <%= @challenge.plastic %> kg of plastic !!!</p>
          <p><%= link_to "ADD to my weekly challenges", weekly_challenges_path(@challenge), method: :post, class: "btn button-show" %></p>
          <p><%= link_to "Mark as already done", weekly_challenges_path(@small_challenge, done: "true"), method: :post,  class: "btn button-show"%></p>
    </div>
  </div>
  <div class="col-5">
    <div class="card card-challenge-show">
        <% if @challenge.video_link %>
          <%= @challenge.video_link.html_safe %>
        <% else %>
          <%= "There is no video yet for this challenge" %>
        <% end %>
    </div>
  </div>
  <div class="col-3">
    <div class="card card-challenge-show">
      <% if @challenge.map %>
      <%= "display the map with partners later" %>
      <% else %>
      <%= "There is no map with partners yet for this challenge" %>
      <% end %>
    </div>
  </div>
</div>


