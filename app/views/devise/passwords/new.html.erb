<div class="container">
  <div class="col-6 mt-5 offset-3 card">
  <h2 class="to_change_h2" style="text-align: center">Password forgotten?</h2>
    <div class= "info_box">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>
        <div class= "form-inputs">
          <%= f.input :email, required: true, autofocus: true, placeholder: "Enter your email to recover your password" %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Reset password", class: "Log_in-btn", style: "margin-top: 1.3rem;" %>
        </div>
        <!-- <img src="https://media2.giphy.com/media/3h2AeAOj83j7slRkyW/giphy.gif?cid=790b76116310a30d3c4144d69f24dce692fa846dbb0290f6&rid=giphy.gif"> -->
      <% end %>
    </div>
      <%= render "devise/shared/links" %>
  </div>
</div>

