<div class="container">
  <div class="col-6 mt-5 offset-3 card">
  <h2 class="log_in_h2" style="text-align: center">Sign up</h2>
    <div class= "sign_up_box">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs_sign_up">
          <%= f.input :email, required: true, autofocus: true, placeholder: "Yourmail@gmail.com"%>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), placeholder: "●●●●●●" %>
          <%= f.input :password_confirmation, required: true, placeholder: "●●●●●●" %>
        </div>
        <div class="form-actions_sign_up">
          <%= f.button :submit, "Sign up", class: "btn btn-secondary btn-log", id: "sign_up-btn"%>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
